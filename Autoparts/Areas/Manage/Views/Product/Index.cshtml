
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Product>
<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>SellPrice</th>
                <th>DiscountPrice</th>
                <th>Title</th>
                <th>InnerImage</th>
                <th>CoverImage</th>
                <th>OtherImage</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (Model ?? new List<Product>()))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.SellPrice</td>
                    <td>@item.DiscountPrice</td>
                    <td>@item.Title</td>
                    <td><img src="~/image/catalog/ProductImage/InnerImage/@item.InnerImage"></td>
                    <td><img src="~/image/catalog/ProductImage/CoverImage/@item.CoverImage"></td>
                    <td><img src="~/image/catalog/ProductImage/OtherImage/@item.OtherImage"></td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
