
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<IndexCategory>

<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th >Sections</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (Model ?? new List<IndexCategory>()))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><img src="~/image/catalog/IndexCategory/@item.Image"></td>
                    <td>@item.SectionId</td>
                    @*<td>@item.Section.Section1</td>
                    <td>@item.Section.Section2</td>
                    <td>@item.Section.Section3</td>
                    <td>@item.Section.Section4</td>*@
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>