
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Slider>
<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>PrimaryTitle</th>
                <th>SecondaryTitle</th>
                <td>Description</td>
                <td>Image</td>
                <td>Order</td>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (Model ?? new List<Slider>()))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.PrimaryTitle</td>
                    <td>@item.SecondaryTitle</td>
                    <td>@item.Description</td>
                    <td><img src="~/image/catalog/slideshow/ImageSlider/@item.Image"></td>
                    <td>@item.Order</td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


